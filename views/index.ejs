<div class="author">
    <h1 class="author__heading">RateMyGame</h1>
    <p class="author__body">Write reviews on your favorite games</p>
    <img src="/img/videogames.jpeg" alt="videogame image" class="hero-image">
    <a href="/admin" class="author__button">Get Started</a>
</div>

<section class="articles">
    <h2 class="articles__heading" style="color: #DBB7FD">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if(nextPage !== null){ %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>